<%- include('../partials/head.ejs') -%>


  <h1>Wiseguy Skills</h1>

  <h3>What it takes to be a wiseguy</h3>
  <hr>
  <% skills.forEach(s => { %>
    <a href='/skills/<%=  s.skill   %>'><%= s.skill %></a>
    <form action="/skills/<%= s.id %>?_method=DELETE" class="delete-form" method="POST">
      <button type="submit">Delete Skill</button>
    </form>
    <form action="/skills/<%= s.skill %>/edit" class="edit-form" method="GET">
      <button type="submit">Edit Skill</button>
    </form>
    <br>
      Skill Level: <%= s.level %>
      <br><br>
      <% }) %>

        <hr>
        <a href='/skills/new'>Add a new skill</a>
        <%- include('../partials/footer.ejs') -%>